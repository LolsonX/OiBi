<% unless @datq.errors.empty? %>
    <div class = "alert alert-error">

      <ul>
        <% @data.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>

    </div>
<% end %>

<div class = "well">
  <%= form_for :data, html: { multipart: true } do |f| %>
      <div class = 'form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :attachment %>
        <%= f.file_field :attachment, class: 'form-control-file' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :key %>
        <%= f.text_field :key, class: 'form-control' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :encryption %>
        <br/>
        <%= f.select :encryption, %w(aes-256-cbc aria-256-cbc blowfish cast5-cbc des-ede3-cbc), class: 'form-control' %>
      </div>
      <%= f.submit 'Decrypt', class: 'btn btn-primary'%>
      <%= link_to 'Back', datum_index_url, class: 'btn btn-primary' %>
  <% end %>
</div>