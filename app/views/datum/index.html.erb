<% unless flash[:notice].blank? %>
    <div class = "alert alert-success">
      <%= flash[:notice] %>
    </div>
<% end %>

<br />

<%= link_to 'Upload file', new_datum_path, class: 'btn btn-primary' %>
<%= link_to 'Back', root_path, class: 'btn btn-primary' %>
<br />
<br />

<table class = "table table-bordered table-striped">
  <thead>.
  <tr>
    <th>Name</th>
    <th>Encryption</th>
    <th>Key</th>
    <th>Key in Hex</th>
    <th>Download Link</th>
    <th> </th>
  </tr>
  </thead>

  <tbody>
  <% @data.each do |file| %>

      <tr>
        <td><%= file.name %></td>
        <td><%= file.encryption%></td>
        <td><%= file.key%></td>
        <td><%= file.key.unpack('H*')%></td>
        <td><%= link_to 'Download file', file.attachment_url %></td>
        <td><%= button_to 'Delete',  file, method: :delete, class: 'btn btn-danger',
                          confirm: "Are you sure that you wish to delete #{file.name}?" %></td>
      </tr>

  <% end %>
  </tbody>

</table>